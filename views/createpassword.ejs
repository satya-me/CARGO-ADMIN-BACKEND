<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>CargoBooking Admin & Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- <link rel="stylesheet" href="assets/css/themes.css"> -->
    <style>
        .bg-primary,
        .btn-primary {
            background: #71a311 !important;
        }

        .btn {
            outline: 0;
            border: 0;
        }
    </style>
</head>

<body>
    <div class="account-pages mt-5">
        <div class="auth-logo text-center">
            <a href="#" class="auth-logo-dark">


                <img src="/public/images/logo (3).png" alt="" height="50">
            </a>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card overflow-hidden">
                        <div class="bg-primary">
                            <div class="row">
                                <div class="col-7">
                                    <div class="text-white p-4">
                                        <h5 class="text-white">Create Password !</h5>
                                        <p style="text-transform: uppercase;"><%-data.user_type%></p>
                                    </div>
                                </div>
                                <div class="col-5 align-self-end">
                                    <img src="/public/images/profile-img3.png" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">

                            <div class="p-2">
                                <form class="form-horizontal" action="/">

                                    <div class="res-msg"></div>

                                    <div class="mb-3">
                                        <label class="form-label">Create Password</label>
                                        <input type="password" id="password" class="form-control error-msg"
                                            placeholder="Enter password" aria-label="Password"
                                            aria-describedby="password-addon">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Re-Type Password</label>
                                        <input type="password" id="conf-password" class="form-control error-msg"
                                            placeholder="Enter password" aria-label="Password"
                                            aria-describedby="password-addon">
                                    </div>

                                    <div id="error_msg"></div>

                                    <div class="mt-3 d-grid">
                                        <button onclick="FormSubmit()" type="button"
                                            class="btn btn-primary btn-block">Create
                                            Password</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                    <div class="mt-3 text-center">

                        <div>
                            <p>Â©
                                <script>
                                    document.write(new Date().getFullYear())
                                </script> CargoBooking. all rights reserved.
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"
        integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"> </script>
    <script>
        var email = "<%=data.email%>";
        var token = "<%=data.token%>";
        var user_type = "<%=data.user_type%>";

        // var BASE_URL = process.env.HOST;
        // console.log(BASE_URL);

        // Add submit event listener to the form
        FormSubmit = () => {
            // Retrieve the input values

            const password = $("#password").val();
            const retypePassword = $("#conf-password").val();


            if (!password || !retypePassword) {
                // At least one of the fields is blank
                $(".error-msg").css("border-color", "red");
                return;
            }

            if (password !== retypePassword) {
                // The passwords do not match
                $(".error-msg").css("color", "red");
                $("#error_msg").html("Password Did Not Matched").css({
                    "background-color": "#a7000067",
                    "padding": "5px 15px",
                    "border-radius": "4px",
                    "border": "1px solid red",
                    "color": "black",
                    "margin": "10px 0"
                });
                return;
            }

            const URL = (user_type === "admin") ?
                "http://192.168.1.23:3304/api/admin/auth/setpassword/" + email + "/" + token + "/" + user_type
                : (user_type === "airline") ?
                    "http://192.168.1.23:3304/api/system/airline/setpassword/" + email + "/" + token + "/" + user_type
                    : (user_type === "vendor") ?
                        "http://192.168.1.23:3304/api/vendor/setpassword/" + email + "/" + token + "/" + user_type : null;
            // Send a POST request to the server

            $.ajax({
                url: URL,
                type: 'POST',
                dataType: "JSON",
                data: {
                    password: password
                },
                success: function (succ) {
                    // console.log(succ);
                    // alert(succ.message);
                    $(".res-msg").html(succ.message).css({
                        "background-color": "#00a74067",
                        "padding": "5px 15px",
                        "border-radius": "4px",
                        "border": "1px solid green",
                        "color": "black",
                        "margin": "10px 0"
                    });

                },
                error: function (err) {
                    console.log(err);
                    $(".res-msg").html(err.message).css({
                        "background-color": "#a7000067",
                        "padding": "5px 15px",
                        "border-radius": "4px",
                        "border": "1px solid red",
                        "color": "black",
                        "margin": "10px 0"
                    });
                }
            });

        }
    </script>

    <!-- modal -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
</body>

</html>